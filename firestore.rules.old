rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for clinic info, but only authenticated users can write
    match /clinicInfo/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read for doctor profiles
    // Allow a doctor to write ONLY to their own profile
    match /doctors/{doctorId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Allow authenticated users to manage nurses
    match /nurses/{nurseId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read for patients (for status checks)
    // Allow authenticated users (staff) to manage patient records
    match /patients/{patientId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
