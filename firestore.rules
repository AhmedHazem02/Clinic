
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // A function to check if the user is an authenticated doctor or nurse
    function isStaff() {
      return request.auth != null && request.auth.token.role in ['doctor', 'nurse'];
    }

    // Doctors collection: Staff can read/write their own profile.
    match /doctors/{doctorId} {
      allow read, write: if isStaff() && request.auth.uid == doctorId;
      // Also allow any authenticated user to read doctor profiles (for patient status page)
      allow get: if request.auth != null;
    }

    // Nurses collection: Staff can manage nurse profiles.
    match /nurses/{nurseId} {
      allow read, write: if isStaff();
    }

    // Clinic Info: Staff can manage settings, authenticated users can read.
    match /clinicInfo/{infoId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }

    // Patients collection: 
    // Staff can manage all patient records.
    // Any user (including unauthenticated) can read a patient document to check status.
    match /patients/{patientId} {
      allow read: if true; // Open read for status checks
      allow create, update, delete: if isStaff();
    }
  }
}
