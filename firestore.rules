rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to clinic settings and doctor profiles.
    // Patients need this to see clinic info and queue status.
    match /clinicInfo/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    match /doctors/{doctorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == doctorId; // Only the doctor can edit their own profile
    }

    // Allow nurses to be managed by authenticated users.
    match /nurses/{nurseId} {
        allow read, write: if request.auth != null;
    }

    // Allow patients to be read by anyone (for status checks).
    // Allow creation, updates, and deletion only by authenticated staff.
    match /patients/{patientId} {
      allow read: if true;
      // Allow create, update, and delete for any authenticated user (doctor/nurse)
      allow write: if request.auth != null;
    }
  }
}
