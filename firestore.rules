
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Doctors can manage their own profiles
    match /doctors/{doctorId} {
      allow read, write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Authenticated users (doctors/nurses) can manage patients
    match /patients/{patientId} {
      allow read, create, update, delete: if request.auth != null;
    }
    
    // Clinic-wide info can be read by authenticated users and written by doctors
    match /clinicInfo/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'doctor';
    }
    
    // Nurses can manage their own profiles
    match /nurses/{nurseId} {
        allow read, write: if request.auth != null && request.auth.uid == nurseId;
    }

    // Allow authenticated users to read all doctor/nurse profiles for general app functionality
    match /doctors/{docId} {
      allow list: if request.auth != null;
    }
     match /nurses/{docId} {
      allow list: if request.auth != null;
    }
  }
}
